  <a class="navbar-brand" href="#">
    <img src="assets/images/cartoon_burger.jpg" width="30" height="30" class="d-inline-block align-top" alt="">
    Eat-that-Burger
  </a>
</nav>

<div class="container">

  <div class="jumbotron">
      <h2>Create a Burger</h2>
      
          <form class="create-form">
              <div class="form-group">
                  <label for="newburger">New Burger:</label>
                  <input type="text" id="newburger" name="burger">
                  <button type="submit" class="btn btn-success" id="addburger"></button>
              </div>
          </form>
      
    </div>

  <div class="jumbotron">
		<div class="row">
      <!-- Undevoured Burgers -->
      <div class="col-sm-6">
        <div class="card">
          <div class="card-header">
            <strong>Burgers To Eat</strong>
          </div>
          <ul class="list-group list-group-flush">
              
            {{#each burger_data}}
                {{#unless this.devoured}}
                    <li class="list-group-item"><strong> {{this.id}} - {{this.burger_name}} </strong>
                    <button type="button" class="devour-burger btn btn-warning" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><i class="fas fa-utensils"></i></button></li>
                    
                {{/unless}}
            {{/each}}
              
          </ul>
        </div>
      </div>
      <!-- Devoured Burgers -->
      <div class="col-sm-6">
        <div class="card">
          <div class="card-header">
            <strong>Burgers Devoured</strong>
          </div>
          <ul class="list-group list-group-flush">
              
            {{#each burger_data}}
                {{#if this.devoured}}
                  <li class="list-group-item"><strong> {{this.id}} - {{this.burger_name}} </strong>
                  {{!-- <button type="button" class="devour-burger btn btn-warning" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><i class="fas fa-utensils"></i></button></li> --}}
                  
                {{/if}}
            {{/each}}
              
          </ul>
        </div>
      </div>
    </div><!-- /row -->
</div>